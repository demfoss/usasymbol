<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - USA Symbol</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content="@ViewData["Description"] ?? " Comprehensive guide to official state symbols across all 50 U.S. states. Explore state birds, flowers, trees, flags, and more."" />
    <meta name="keywords" content="state symbols, state birds, state flowers, US states, American symbols" />
    <meta name="author" content="USA Symbol" />

    <!-- Open Graph -->
    <meta property="og:title" content="@ViewData["Title"] - USA Symbol" />
    <meta property="og:description" content="@ViewData["Description"] ?? " Explore official state symbols across all 50 U.S. states"" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path" />
    <meta property="og:image" content="@(ViewData["OgImage"] ?? "/images/og-default.jpg")" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewData["Title"] - USA Symbol" />
    <meta name="twitter:description" content="@ViewData["Description"] ?? " Explore official state symbols"" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- HEADER -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <svg class="w-8 h-8 text-blue-900 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"></path>
                        </svg>
                        <span class="text-xl font-bold text-blue-900">USA Symbol</span>
                    </a>
                </div>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-8">
                    <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-blue-900 font-medium smooth-transition">Home</a>
                    <a asp-controller="State" asp-action="Listing" class="text-gray-700 hover:text-blue-900 font-medium smooth-transition">States</a>
                    <a asp-controller="Symbol" asp-action="Categories" class="text-gray-700 hover:text-blue-900 font-medium smooth-transition">Symbols</a>
                    <a asp-controller="Home" asp-action="About" class="text-gray-700 hover:text-blue-900 font-medium smooth-transition">About</a>
                </div>

                <!-- Search & Mobile Menu -->
                <div class="flex items-center space-x-2">
                    <!-- Search Icon -->
                    <a href="/search" class="p-2 text-gray-700 hover:text-blue-900 smooth-transition">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </a>

                    <!-- Mobile Menu Button -->
                    <button id="mobile-menu-button" class="md:hidden p-2 text-gray-700 hover:text-blue-900">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="hidden md:hidden pb-4">
                <div class="flex flex-col space-y-2">
                    <a asp-controller="Home" asp-action="Index" class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">Home</a>
                    <a asp-controller="State" asp-action="Listing" class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">States</a>
                    <a asp-controller="Symbol" asp-action="Categories" class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">Symbols</a>
                    <a asp-controller="Home" asp-action="About" class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">About</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-blue-900 text-white py-12 mt-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Main Footer Content -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
                <!-- About Column -->
                <div>
                    <h3 class="text-lg font-bold mb-4">USA Symbol</h3>
                    <p class="text-blue-200 text-sm mb-4">
                        Your comprehensive educational resource for learning about official state symbols across all 50 states.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-blue-200 hover:text-white transition" aria-label="Twitter">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
                            </svg>
                        </a>
                        <a href="#" class="text-blue-200 hover:text-white transition" aria-label="Facebook">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm3 8h-1.35c-.538 0-.65.221-.65.778v1.222h2l-.209 2h-1.791v7h-3v-7h-2v-2h2v-2.308c0-1.769.931-2.692 3.029-2.692h1.971v3z" />
                            </svg>
                        </a>
                        <a href="#" class="text-blue-200 hover:text-white transition" aria-label="Instagram">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h3 class="text-lg font-bold mb-4">Quick Links</h3>
                    <ul class="space-y-2 text-blue-200 text-sm">
                        <li><a asp-controller="State" asp-action="Listing" class="hover:text-white transition">Browse States</a></li>
                        <li><a asp-controller="Symbol" asp-action="Categories" class="hover:text-white transition">Browse Symbols</a></li>
                        <li><a asp-controller="Home" asp-action="Quiz" class="hover:text-white transition">Take a Quiz</a></li>
                    </ul>
                </div>

                <!-- Resources -->
                <div>
                    <h3 class="text-lg font-bold mb-4">Resources</h3>
                    <ul class="space-y-2 text-blue-200 text-sm">
                        <li><a href="/teachers" class="hover:text-white transition">For Teachers</a></li>
                        <li><a href="/blog" class="hover:text-white transition">Blog</a></li>
                        <li><a href="/downloads" class="hover:text-white transition">Downloads</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div>
                    <h3 class="text-lg font-bold mb-4">Contact</h3>
                    <ul class="space-y-2 text-blue-200 text-sm">
                        <li><a asp-controller="Home" asp-action="About" class="hover:text-white transition">About Us</a></li>
                        <li><a href="/contact" class="hover:text-white transition">Contact</a></li>
                        <li><a href="/privacy" class="hover:text-white transition">Privacy Policy</a></li>
                        <li><a href="/terms" class="hover:text-white transition">Terms of Use</a></li>
                    </ul>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div class="border-t border-blue-800 pt-8">
                <div class="flex flex-col md:flex-row justify-between items-center text-sm">
                    <p class="text-blue-200 mb-4 md:mb-0">
                        © @DateTime.Now.Year USA Symbol • Educational Resource
                    </p>
                    <div class="flex space-x-6 text-blue-200">
                        <a href="/sitemap.xml" class="hover:text-white transition">Sitemap</a>
                        <a href="/accessibility" class="hover:text-white transition">Accessibility</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>