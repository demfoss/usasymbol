@model USASymbol.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION -->
<section class="relative bg-blue-900 text-white py-20 text-center">
    <div class="max-w-4xl mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Discover All 50 U.S. State Symbols</h1>
        <p class="text-lg md:text-xl text-blue-100 mb-6">
            Explore the official birds, flowers, trees, and flags that represent each U.S. state.
        </p>
        <div class="flex justify-center gap-4 flex-wrap">
            <a href="/states" class="bg-white text-blue-900 px-6 py-3 rounded-lg font-semibold hover:bg-blue-100 transition">Explore by State</a>
            <a href="/symbols" class="bg-red-600 px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition">Explore by Symbol</a>
            <a asp-controller="Home" asp-action="About" class="border border-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-900 transition">Learn More</a>
        </div>
    </div>
</section>

<!-- INTERACTIVE QUIZ SECTION -->
<section class="py-16 bg-gradient-to-br from-blue-50 to-indigo-50">
    <div class="max-w-4xl mx-auto px-4">
        <div class="text-center mb-10">
            <h2 class="text-3xl font-bold mb-3">🎯 Test Your Knowledge!</h2>
            <p class="text-gray-600">How well do you know U.S. state symbols?</p>
        </div>

        <!-- Quiz Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8 quiz-card fade-in">
            <!-- Score Display -->
            <div class="flex justify-between items-center mb-6 pb-4 border-b">
                <div class="flex items-center gap-2">
                    <span class="text-2xl">🏆</span>
                    <span class="text-lg font-semibold">Score: <span id="score" class="text-blue-700">0</span>/<span id="total" class="text-gray-500">0</span></span>
                </div>
                <div class="text-sm text-gray-500">
                    Question <span id="questionNum">1</span>
                </div>
            </div>

            <!-- Question -->
            <div class="mb-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-2" id="question">Loading question...</h3>
                <p class="text-gray-600" id="questionHint"></p>
            </div>

            <!-- Answer Options -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6" id="answers">
                <!-- Answer buttons will be inserted here -->
            </div>

            <!-- Feedback Message -->
            <div id="feedback" class="text-center mb-6 min-h-[60px] flex items-center justify-center">
                <p id="feedbackText" class="text-lg font-semibold"></p>
            </div>

            <!-- Next Question Button -->
            <div class="text-center">
                <button id="nextBtn" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition disabled:bg-gray-300 disabled:cursor-not-allowed" disabled>
                    Next Question →
                </button>
            </div>
        </div>

        <!-- Link to Full Quiz -->
        <div class="text-center mt-8">
            <a asp-controller="Home" asp-action="Quiz" class="text-blue-700 font-semibold hover:underline">
                Want more questions? Try our full quiz →
            </a>
        </div>
    </div>
</section>

<!-- CATEGORY GRID -->
<section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto text-center mb-10 px-4">
        <h2 class="text-3xl font-bold mb-4">Explore by Category</h2>
        <p class="text-gray-600">Browse official symbols by type - from birds and flowers to flags and mottos.</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 gap-8 max-w-6xl mx-auto px-4">
        @foreach (var category in Model.SymbolCategories)
        {
            <a href="@category.Url" class="bg-gray-50 p-6 rounded-xl hover:shadow-lg transition cursor-pointer text-center">
                <div class="text-5xl mb-3">@category.Icon</div>
                <h3 class="font-semibold text-lg mb-2">@category.Name</h3>
                <p class="text-sm text-gray-600 mb-4">@category.Description</p>
                <span class="text-blue-700 font-semibold">View All →</span>
            </a>
        }
    </div>
</section>

<!-- EXPLORE BY STATE -->
<section class="py-20 bg-white text-center">
    <div class="px-4">
        <h2 class="text-3xl font-bold mb-6">Explore by State</h2>
        <p class="text-gray-700 mb-10">Click on a state to see all its official symbols.</p>

        @if (Model.FeaturedStates.Any())
        {
            <div class="grid grid-cols-2 md:grid-cols-5 gap-6 max-w-5xl mx-auto">
                @foreach (var state in Model.FeaturedStates)
                {
                    <a href="/states/@state.Slug" class="bg-gray-50 rounded-lg p-5 shadow hover:shadow-lg transition group">
                        @{
                            var flagPath = $"/images/states/flags/small/{state.Abbreviation.ToLower()}.webp";
                        }

                        <!-- Flag Image -->
                        <div class="w-full aspect-[3/2] mb-3 rounded overflow-hidden bg-gray-200">
                            <img src="@flagPath"
                                 alt="@state.Name flag"
                                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                 loading="lazy">

                            <!-- Fallback -->
                            <div class="w-full h-full hidden items-center justify-center bg-gradient-to-br from-blue-500 to-blue-700">
                                <span class="text-2xl font-bold text-white">@state.Abbreviation</span>
                            </div>
                        </div>

                        <h3 class="font-semibold text-gray-900">@state.Name</h3>
                        <p class="text-xs text-gray-500 mt-1">@state.Capital</p>
                    </a>
                }
            </div>
        }

        <div class="mt-10">
            <a href="/states" class="text-blue-700 font-semibold hover:underline">View All 50 States →</a>
        </div>
    </div>
</section>

<!-- DID YOU KNOW SECTION -->
<section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">Did You Know?</h2>
        <div class="bg-blue-50 p-8 rounded-xl shadow-md">
            <p class="text-lg text-gray-700 mb-4">
                The Northern Cardinal is the most popular state bird, chosen by seven different states: Illinois, Indiana, Kentucky, North Carolina, Ohio, Virginia, and West Virginia.
            </p>
            <a href="/symbols/birds" class="text-blue-700 font-semibold hover:underline">Explore State Birds →</a>
        </div>
    </div>
</section>

<!-- LEARN SECTION -->
<section class="py-16 bg-gray-50 text-center">
    <div class="px-4">
        <h2 class="text-3xl font-bold mb-4">Learn About State Symbols</h2>
        <p class="text-gray-600 mb-8">Understand the meaning and history behind America's state symbols.</p>
        <div class="flex flex-wrap justify-center gap-6">
            <a asp-controller="Home" asp-action="About" class="bg-white px-8 py-4 rounded-lg hover:shadow-md transition font-semibold">What Are State Symbols?</a>
            <a href="/states" class="bg-white px-8 py-4 rounded-lg hover:shadow-md transition font-semibold">Browse All States</a>
            <a asp-controller="Home" asp-action="Quiz" class="bg-white px-8 py-4 rounded-lg hover:shadow-md transition font-semibold">Take a Quiz</a>
        </div>
    </div>
</section>

<!-- CTA SECTION -->
<section class="py-16 bg-gradient-to-r from-blue-900 to-blue-700 text-white text-center">
    <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold mb-4">Start Your Journey Through America's Symbols</h2>
        <p class="text-blue-100 text-lg mb-8">
            Explore fascinating facts about each state's unique identity and heritage.
        </p>
        <div class="flex justify-center gap-4 flex-wrap">
            <a href="/states" class="bg-white text-blue-900 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition">Browse States</a>
            <a href="/symbols" class="bg-red-600 px-8 py-3 rounded-lg font-semibold hover:bg-red-700 transition">Browse Symbols</a>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/quiz.js" asp-append-version="true"></script>
}